<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/popUpFragment"
    android:layout_width="300dp"
    android:layout_height="500dp"
    android:layout_gravity="center"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:id="@+id/restaurantName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/placeholder"
        android:textAlignment="center"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_gravity="center_horizontal"
        android:fontFamily="@font/soliden" />

    <Button
        android:id="@+id/btnCamera"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="16dp"
        android:drawableLeft="@drawable/ic_camera"
        android:drawableTint="@color/white"
        android:paddingTop="8dp"
        android:text="@string/camera" />

    <Button
        android:id="@+id/btnGalery"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="16dp"
        android:drawableLeft="@drawable/ic_gallery"
        android:drawableTint="@color/white"
        android:paddingTop="8dp"
        android:text="@string/gallery" />

    <Button
        android:id="@+id/btnSimulateData"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="16dp"
        android:drawableLeft="@drawable/ic_simulate_data"
        android:drawableTint="@color/white"
        android:paddingTop="8dp"
        android:text="@string/simulate_data" />

    <Button
        android:id="@+id/btnEvent"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="16dp"
        android:drawableLeft="@drawable/ic_simulate_data"
        android:drawableTint="@color/white"
        android:paddingTop="8dp"
        android:text="@string/price_change" />

    <Button
        android:id="@+id/btnBack"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="16dp"
        android:drawableTint="@color/white"
        android:paddingTop="4dp"
        android:text="@string/back" />

</LinearLayout>