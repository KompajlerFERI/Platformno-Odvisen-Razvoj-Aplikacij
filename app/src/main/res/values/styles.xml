<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="BottomNavigationBarItemStyle" parent="Widget.Material3.BottomNavigationView">
        <item name="android:fontFamily">@font/mona_sans</item>
    </style>

    <style name="BottomNavigationBarItemSelectedStyle" parent="Widget.Material3.BottomNavigationView">
        <item name="android:fontFamily">@font/mona_sans_medium</item>
    </style>

    <style name="BottomNavigationBarStyle" parent="Widget.Material3.BottomNavigationView">
        <item name="itemTextAppearanceActive">@style/BottomNavigationBarItemSelectedStyle</item>
        <item name="itemTextAppearanceInactive">@style/BottomNavigationBarItemStyle</item>
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.BottomNavigationView</item>
    </style>

    <style name="ThemeOverlay.App.BottomNavigationView" parent="">
        <item name="colorSurface">@color/black</item>
        <item name="colorOnSurfaceVariant">@color/gray</item>
    </style>

    <style name="RestaurantCardNameStyle">
        <item name="android:textColor">@color/dark_red</item>
        <item name="android:textSize">@dimen/text_large</item>
        <item name="android:fontFamily">@font/soliden</item>
        <item name="textAllCaps">true</item>
    </style>

    <style name="RestaurantCardTextStyle">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/text_medium</item>
    </style>

</resources>